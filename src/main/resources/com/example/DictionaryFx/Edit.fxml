<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #333333; -fx-border-color: #323232; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.DictionaryFx.EditController">
   <children>
      <VBox layoutX="230.0" layoutY="14.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Word : " textFill="#bbbbbb">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets left="20.0" top="15.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="wordTarget" editable="false" style="-fx-background-color: #333333; -fx-border-color: #515151; -fx-text-fill: #B9B9B9;">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <Label text="Pronoun : " textFill="#bbbbbb">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets left="20.0" top="15.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="wordSound" style="-fx-background-color: #333333; -fx-border-color: #515151; -fx-text-fill: #B9B9B9;">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <Label text="Meaning : " textFill="#bbbbbb">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets left="20.0" top="15.0" />
               </VBox.margin>
            </Label>
            <TextArea fx:id="wordExplain" style="-fx-text-fill: #B9B9B9; -fx-control-inner-background: #333333; -fx-background-color: transparent; -fx-border-color: #515151; -fx-background-radius: 0;" stylesheets="@style.css" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </TextArea>
            <HBox alignment="BOTTOM_RIGHT" fillHeight="false" VBox.vgrow="NEVER">
               <children>
                  <Button mnemonicParsing="false" prefWidth="60.0" styleClass="search-button" stylesheets="@style.css" text="Save" textFill="WHITE">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" prefWidth="60.0" styleClass="search-button" stylesheets="@style.css" text="Cancel" textFill="WHITE">
                     <HBox.margin>
                        <Insets bottom="10.0" right="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
